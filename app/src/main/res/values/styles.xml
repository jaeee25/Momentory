<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="customToolbarTitleText">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontWeight">700</item>
        <item name="android:fontFamily">@font/moneygraphy_rounded</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="roundSquareImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15%</item>
    </style>

    <style name="messageRoundSquareView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8%</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabBackground">@drawable/tab_background</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabSelectedTextColor">@color/black</item>
    </style>

    <style name="TabMarginStyle">
        <item name="tabPaddingStart">8dp</item>
        <item name="tabPaddingEnd">8dp</item>
    </style>

    <style name="createCapsule" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/moneygraphy_rounded</item>
<!--        <item name="android:textStyle">bold</item>-->
    </style>

    <style name="PopupActivityTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="datePickerStyle">
        <item name="android:fontFamily">@font/moneygraphy_rounded</item>
        <item name="android:headerYearTextAppearance">@color/red</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlActivated">@color/deep_pink</item>
        <item name="colorControlHighlight">@color/deep_pink</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorPrimary">@color/deep_pink</item>
        <item name="android:textColorTertiary">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>
        <item name="android:textColorSecondaryInverse">@color/black</item>
    </style>
</resources>
