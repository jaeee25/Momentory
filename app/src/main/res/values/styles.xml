<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="customToolbarTitleText">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontWeight">700</item>
        <item name="android:fontFamily">@font/moneygraphy_rounded</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="roundSquareImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15%</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="createCapsule" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/moneygraphy_rounded</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
