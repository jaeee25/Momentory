<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="customToolbarTitleText">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontWeight">700</item>
        <item name="android:fontFamily">@font/moneygraphy_rounded</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/transparent</item> <!-- 인디케이터 제거 -->
        <item name="tabBackground">@drawable/tab_background</item> <!-- 상태별 배경 -->
        <item name="tabTextColor">@color/black</item> <!-- 항상 검정색 -->
        <item name="tabSelectedTextColor">@color/black</item> <!-- 선택된 탭 글씨도 검정 -->
    </style>

    <style name="TabMarginStyle">
        <item name="tabPaddingStart">8dp</item>
        <item name="tabPaddingEnd">8dp</item>
    </style>

</resources>