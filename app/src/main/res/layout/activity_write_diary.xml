<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WriteDiaryActivity"
    android:background="@color/deep_pink"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:gravity="bottom">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_weight="1"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:id="@+id/to_home" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜"
            android:layout_weight="1"
            android:textAppearance="@style/mainTitle" />

    </LinearLayout>




    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:paddingHorizontal="8dp"
        android:paddingVertical="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_btn"
        android:id="@+id/share"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/baseline_check_24"
            android:layout_marginRight="5dp"
            app:tint="#000000" />

        <TextView
            android:id="@+id/shareText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="비공개"
            android:textAlignment="center" />
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:background="@drawable/rounded_up_background"
    android:padding="20dp">

    <FrameLayout
        android:layout_width="260dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:background="@color/light_pink">

        <ImageView
            android:id="@+id/selectedImage"
            android:layout_width="@dimen/imgWidth"
            android:layout_height="@dimen/imgHeight"
            android:scaleType="centerCrop"
            android:visibility="gone" /> <!-- 사용자가 선택한 이미지는 꽉 차게 but 선택 전에는 숨김 -->

        <ImageView
            android:id="@+id/selectImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/baseline_camera_alt_24"
            app:tint="@color/deep_pink" />
    </FrameLayout>

    <EditText
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="제목을 입력하세요"
        android:layout_gravity="center"
        style="@style/subTitle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_marginBottom="5dp"

        >

        <ImageButton
            android:id="@+id/select_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_location_pin_24"
            android:background="@null"
            android:textAlignment="viewStart"/>

        <TextView
            android:id="@+id/location"
            style="@style/subTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="위치"
            android:textAlignment="viewStart" />

        <TextView
            android:id="@+id/weather"
            style="@style/subTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="날씨"
            android:clickable="true"
            android:textAlignment="viewEnd" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    <EditText
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/light_pink"
        android:padding="10dp"/>
    </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="15dp">

    <Button
        android:id="@+id/cancelbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginHorizontal="20dp"
        android:layout_weight="1"
        android:backgroundTint="@color/light_pink"
        android:text="취소"
        android:textColor="@color/deep_pink"
        android:textStyle="bold" />
    <Button
        android:id="@+id/writebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="작성"
        android:textColor="@color/white"
        android:backgroundTint="@color/deep_pink"
        android:layout_weight="1"
        android:layout_marginHorizontal="20dp"
        android:textStyle="bold"
        />
</LinearLayout>



</LinearLayout>

</LinearLayout>
