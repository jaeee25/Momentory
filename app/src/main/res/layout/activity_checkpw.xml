<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckpwActivity"
    android:background="@color/deep_pink"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:backgroundTint="@color/deep_pink"
        android:gravity="center">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toLogin"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="10dp"
            app:navigationIcon="@drawable/baseline_arrow_back_ios_24">

            <TextView
                style="@style/customToolbarTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="비밀번호 찾기" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/rounded_up_background"
            android:padding="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAppearance="@style/welcome" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="10dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="핸드폰 전화번호 입력"
                        android:textAppearance="@style/subTitle"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <EditText
                            android:id="@+id/phone_cert"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:inputType="phone"
                            android:textAppearance="@style/inputText"
                            android:background="@drawable/rounded_input"
                            android:layout_marginRight="10dp"/>

                        <Button
                            android:id="@+id/send_msg"
                            android:layout_width="105dp"
                            android:layout_height="50dp"
                            android:textColor="@color/white"
                            android:background="@drawable/rounded_btn_deep"
                            android:text="인증요청"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="인증 번호 입력"
                        android:layout_marginTop="20dp"
                        android:textAppearance="@style/subTitle"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"

                        android:layout_marginTop="10dp">

                        <EditText
                            android:id="@+id/cert_num"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:inputType="number"
                            android:textAppearance="@style/inputText"
                            android:background="@drawable/rounded_input"
                            android:layout_marginRight="10dp"/>

                        <Button
                            android:id="@+id/certification"
                            android:layout_width="105dp"
                            android:layout_height="50dp"
                            android:text="인증"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:background="@drawable/rounded_btn_deep"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cert_complete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_marginTop="30dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="인증이 완료되었습니다.\n비밀번호를 변경해 주세요."
                            android:textAlignment="center"
                            android:textColor="#3E3E3E"
                            android:textSize="18sp" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="?android:attr/listDivider"
                    android:layout_marginTop="20dp"/>

                <LinearLayout
                    android:id="@+id/pw_change_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:visibility="invisible"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="새로운 비밀번호 입력"
                        android:layout_marginTop="20dp"
                        android:textAppearance="@style/subTitle"/>

                    <EditText
                        android:id="@+id/pw_new"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:textAppearance="@style/inputText"
                        android:background="@drawable/rounded_input"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"/>



                    <Button
                        android:id="@+id/change_pw"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="비밀번호 변경"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:background="@drawable/rounded_btn_deep"
                        android:layout_marginTop="15dp"/>





                </LinearLayout>

            </LinearLayout>


        </LinearLayout>





    </LinearLayout>