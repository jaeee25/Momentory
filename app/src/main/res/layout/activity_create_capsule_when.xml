<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep_pink"
    android:orientation="vertical"
    tools:context=".CreateCapsuleWhenActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:backgroundTint="@color/deep_pink"
        android:gravity="center">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/capsule_when_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:navigationIcon="@drawable/baseline_arrow_back_ios_24">

            <TextView
                style="@style/customToolbarTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="언제 타임캡슐을\n열어볼까요?" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/rounded_up_background"
        android:gravity="center"
        android:orientation="vertical">

        <DatePicker
            android:id="@+id/date_picker"
            style="@style/datePickerStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:datePickerMode="calendar"
            android:theme="@style/datePickerStyle" />

        <Button
            android:id="@+id/complete_capsule_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/moneygraphy_rounded"
            android:text="완료"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>