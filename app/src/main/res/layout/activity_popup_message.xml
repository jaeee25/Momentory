<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="40dp">

        <TextView
            android:id="@+id/capsuleWriterName"
            android:fontFamily="@font/moneygraphy_rounded"
            android:layout_width="70dp"
            android:layout_height="37dp"
            android:layout_marginEnd="7dp"
            android:background="@drawable/capsule_tab_background"
            android:gravity="center"
            android:orientation="vertical"
            android:textSize="16dp"
            android:text="이름" />

        <TextView
            android:id="@+id/capsuleMessageClose"
            android:fontFamily="@font/moneygraphy_rounded"
            android:textSize="16dp"
            android:layout_width="70dp"
            android:layout_height="37dp"
            android:background="@drawable/capsule_tab_background"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:text="닫기" />
    </LinearLayout>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        app:cardBackgroundColor="@color/light_pink"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:id="@+id/item_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/light_pink"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingTop="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="30dp">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/capsuleOpenImage"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:background="@color/white"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/roundSquareImageView" />


            <TextView
                android:id="@+id/capsuleOpenComment"
                android:fontFamily="@font/moneygraphy_rounded"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:minHeight="100dp"
                android:text="" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>